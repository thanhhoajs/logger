{
  "name": "@thanhhoajs/logger",
  "version": "1.0.4",
  "description": "A powerful and flexible logger designed specifically for the @thanhhoajs ecosystem, optimized for high performance with Bun and TypeScript",
  "author": "Nguyen Nhu Khanh <kwalker.nnk@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/thanhhoajs/logger#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/thanhhoajs/logger.git"
  },
  "bugs": {
    "url": "https://github.com/thanhhoajs/logger/issues"
  },
  "keywords": [
    "thanhhoa",
    "thanhhoajs",
    "logger",
    "bun",
    "typescript"
  ],
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun run build.ts",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" \"example/**/*.ts\"",
    "example": "bun run example/index.ts",
    "test": "bun test logger.test.ts"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "bun-plugin-dts": "^0.2.3",
    "prettier": "^3.3.2"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
